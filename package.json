    "jquery": "^3.5.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@fullhuman/postcss-purgecss": "^3.1.3",
    "autoprefixer": "^9.8.6",
    "bootlint": "^1.1.0",
    "htmlhint": "^0.14.2",
    "markdownlint": "^0.22.0",
